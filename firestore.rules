rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Businesses are publicly readable, anyone can create, only owner/admin can update/delete
    match /businesses/{businessId} {
      allow read: if true;
      allow create: if true; // Anyone can create
      allow update, delete: if request.auth != null &&
        (request.auth.uid == resource.data.ownerId ||
         request.auth.token.email == "nabira.per1701@gmail.com");
    }
    
    // Pending businesses - anyone can create, only admin can read/update/delete
    match /pendingBusinesses/{businessId} {
      allow read: if request.auth != null &&
        request.auth.token.email == "nabira.per1701@gmail.com";
      allow create: if true; // Anyone can create
      allow update, delete: if request.auth != null &&
        request.auth.token.email == "nabira.per1701@gmail.com";
    }
    
    // Products are publicly readable, anyone can create, only admin can approve/update status
    match /products/{productId} {
      allow read: if true;
      allow create: if true; // Anyone can create
      allow update, delete: if request.auth != null &&
        request.auth.token.email == "nabira.per1701@gmail.com";
    }
    
    // Pending products - anyone can create, only admin can read/update/delete
    match /pendingProducts/{productId} {
      allow read: if request.auth != null &&
        request.auth.token.email == "nabira.per1701@gmail.com";
      allow create: if true; // Anyone can create
      allow update, delete: if request.auth != null &&
        request.auth.token.email == "nabira.per1701@gmail.com";
    }
    
    // Business claim requests - anyone can create, only admin and claimant can read
    match /businessClaimRequests/{requestId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.claimedBy ||
         request.auth.token.email == "nabira.per1701@gmail.com");
      allow create: if true; // Anyone can create
      allow update, delete: if request.auth != null &&
        request.auth.token.email == "nabira.per1701@gmail.com";
    }
    
    // Legacy business requests (keeping for compatibility)
    match /businessRequests/{requestId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         request.auth.token.email == "nabira.per1701@gmail.com");
      allow create: if true; // Anyone can create
      allow update, delete: if request.auth != null &&
        request.auth.token.email == "nabira.per1701@gmail.com";
    }
  }
}
